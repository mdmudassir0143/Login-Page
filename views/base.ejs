<%- include('header'); -%> 
    
<div class="text-center center-div" id="login">
    <div class="container w-25 border border-dark py-5">
        <div class="title pb-2">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for the existing user</span>
            <% if(locals.logout){ %>
                <div class="alert alert-success text-center" role="alert">
                    <%= logout %>
                </div> 
            <% } %>   
        </div>
        <form action="/route/login" method="post">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email" required>
                <div class="form-text text-muted text-start">Registered email address</div>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password" >
            </div>
            <button type="submit" class="btn btn-primary rounded-pill">Submit</button>
        </form>
    </div>
</div>

<%- include('footer') -%>  